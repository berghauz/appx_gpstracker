{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "go",
    "isBackground": false,
    "echoCommand": true,
    "options": {
        "env": {
            "GOPATH": "/home/berg/go"
        }
    },
    "tasks": [
        {
            "label": "build and run",
            "type": "shell",
            "command": "go build -x -ldflags \"-X main.version=`git describe --tags --long` -X main.buildstamp=`date '+%Y-%m-%d/%H:%M:%S/%Z'` -X main.githash=`git rev-parse HEAD`\" && ./appx_gpstracker -C ./conf/gpstracker.yaml -l debug -cp ./cpuprofile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}
